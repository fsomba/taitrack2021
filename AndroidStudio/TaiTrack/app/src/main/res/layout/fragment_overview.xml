<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentOverview">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/relative_layout">

            <TextView
                android:id="@+id/label_unit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:text="Unit Code:" />

            <TextView
                android:id="@+id/txt_unit_code"
                android:layout_toEndOf="@id/label_unit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="BAC 1101"
                android:gravity="center"/>

            <TextView
                android:id="@+id/label_unit_name"
                android:layout_below="@id/label_unit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Unit Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_unit_name"
                android:layout_toEndOf="@id/label_unit_name"
                android:layout_below="@id/label_unit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text="OPERATING SYSTEMS"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnSignAttendance"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="SIGN ATTENDANCE" />

        <Button
            android:id="@+id/btnDropUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="DROP UNIT" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="60dp"
            android:minWidth="250dp"
            android:max="100"
            android:indeterminate="true"
            android:progress="1" />

        <TextView
            android:id="@+id/txt_progress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="...uploading photo..."/>

    </LinearLayout>

</FrameLayout>